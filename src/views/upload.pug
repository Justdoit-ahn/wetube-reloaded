extends base.pug


block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="title",placeholder="Title", required, text="text", maxlength=80)
    input(name="description",placeholder="Description", required, text="text", minlength=20)
    input(name="hashtags",placeholder="Hashtags, separated by comma.", required, text="text")
    input(type="submit", value="업로드 비디오")